@inject IJSRuntime jsRuntime;

<div class="postcode-input">
<input type="text" @bind="DeliveringToPostcode" />
<button type="submit" class="rounded-2" @onclick="OnPostcodeLookupButtonClicked">Lookup postcode</button>
</div>
@if(GetDistance() < 5.1)
{
    <span class="postcode-distance-result">@DeliveringToPostcode is @Math.Round(GetDistance(), 1)mi from @deliveringFromPostcode.</span>
}
// I'm not sure what could get rid of this error message
else if (GetDistance() > 5.1 || DeliveringToPostcode is null)
{
    <span class="postcode-too-far">@DeliveringToPostcode is too far from @deliveringFromPostcode! @DeliveringToPostcode is @Math.Round(GetDistance(), 1)mi away.</span>
}